@model Cookbook.Models.RecipeDifViewModel

@{
    ViewData["Title"] = "Recipes";
}

    <h1>List of recipes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Recipes" asp-action="Index" method="get">
    <p>
        Difficulty:
        <select asp-for="RecipeDif" asp-items="Model.Difficulties">
            <option value="">All</option>
        </select>

        Name: <input type="text" asp-for="SearchString"/>
        <input type="submit" value="Filter"/>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].Difficulty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].NumberOfLikes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].Ingredients)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].Process)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipes[0].TipsAndTricks)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Recipes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Difficulty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfLikes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Process)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipsAndTricks)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
